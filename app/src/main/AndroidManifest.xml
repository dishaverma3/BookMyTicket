<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bookmyticket">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BookMyTicket"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.AllBookings.AllBookingsActivity" android:label="My Bookings"/>
        <activity android:name=".ui.ConfirmBooking.ConfirmTicketActivity" android:label="Ticket Confirm"/>
        <activity android:name=".ui.BookTicket.BookTicketActivity" android:label="Booking"/>
        <activity android:name=".ui.MovieDetails.MovieDetailsActivity" android:label="Movie Details"/>
        <activity android:name=".ui.MovieList.MovieListActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>